{
  "name": "api",
  "version": "1.0.0",
  "description": "Patient Management API - Express.js backend with TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "dev:debug": "nodemon --exec \"node --inspect=0.0.0.0:9229 -r ts-node/register src/server.ts\"",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts,.js,.mjs",
    "lint:fix": "eslint . --ext .ts,.js,.mjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "express",
    "typescript",
    "api",
    "patient-management"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@sinclair/typebox": "^0.32.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "ajv": "^8.0.0",
    "ajv-formats": "^3.0.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.3",
    "drizzle-orm": "^0.44.2",
    "express": "^5.0.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "nodemon": "^3.0.0",
    "pg": "^8.16.2",
    "sanitize-filename": "^1.6.3",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.0",
    "@types/ajv": "^1.0.0",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^8.2.0",
    "@types/helmet": "^0.0.48",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.0",
    "@types/pg": "^8.15.4",
    "@types/sanitize-filename": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.0.0"
  }
}
